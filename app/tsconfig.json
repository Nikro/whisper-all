{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "electron",
    "e2e",
    "playwright.config.ts",
    "vite.config.ts",
    "tailwind.config.js",
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "dist-electron",
    "build",
    "node_modules",
    "app/dist",
    "app/dist-electron",
    "app/build",
    "app/node_modules"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
